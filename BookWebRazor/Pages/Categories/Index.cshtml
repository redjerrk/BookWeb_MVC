@page
@model BookWebRazor.Pages.Categories.IndexModel
@{
}


<div class="container">
    

    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h1>Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="categories/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>




    <div class="">
        <table class="table table-bordered table-striped text-center align-content-center">
            <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Modify
                </th>


            </tr>
            </thead>

            <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder </td>
                    <td>
                        <div class="w-30 btn-group " role="group">
                            <a asp-page="categories/edit" class="btn btn-outline-success mx-2" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-page="categories/delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id"> <i class="bi bi-trash"></i> Delete</a>
                        </div>

                    </td>
                </tr>

            }
            </tbody>
        </table>
    </div>
</div>


